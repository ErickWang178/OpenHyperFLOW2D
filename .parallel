######################################################
# Type of parallel code
######################################################
# PARALLEL=          - do not use parallel features
# PARALLEL=OPEN_MP   - using OpenMP
# PARALLEL=MPI       - using MPI
# PARALLEL=CUDA      - using CUDA (GPU)
######################################################
ifeq ("${PARALLEL}","")
PARALLEL=CUDA
endif
#######################################################
# CUDA
#######################################################
ifeq (${PARALLEL},CUDA)
CUDA    = -D_CUDA_XX
PARALLEL_SUFFIX +=-CUDA
endif
#######################################################
# OpenMP
#######################################################
ifeq (${PARALLEL},OPEN_MP)
OPENMP    = -D_OPEN_MP
PARALLEL_SUFFIX +=-OMP
endif
#######################################################
# MPI
#######################################################
# Choose MPI vendor
#
# MPIVEND=MVAPICH   - MVAPICH
# MPIVEND=INTEL     - Intel MPI
# MPIVEND=LAM       - LAM
# MPIVEND=OpenMPI   - OpenMPI
#######################################################
ifeq (${PARALLEL},MPI)
MPIVEND=INTEL
endif
#######################################################
# MVAPICH
#######################################################
ifeq (${MPIVEND},MVAPICH)

ifeq ("${COMPILER}","Intel")
MPI2DIR=/share/mpi/icc/mvapich-1.2.0
MPI1DIR=/share/mpi/icc/mvapich-1.2.0
endif

ifeq ("${COMPILER}","GNU")
MPI2DIR=/share/mpi/gcc/mvapich-1.2.0
MPI1DIR=/share/mpi/gcc/mvapich-1.2.0
endif

MPIDIR    = $(MPI2DIR)
MPILIB    = $(MPIDIR)/lib
MPIBIN    = $(MPIDIR)/bin
MPIARCH   = LINUX
MPI       = -L $(MPILIB) -D_MPI -D_MVAPICH_
#-D_MPI_NB 
PARALLEL_SUFFIX +=-MPI-NB
endif
#######################################################
# Intel MPI
#######################################################
ifeq (${MPIVEND},INTEL)
MPI2DIR=/opt/intel/impi/4.1.0
MPI1DIR=/opt/intel/impi/4.1.0
MPIDIR    = $(MPI2DIR)
MPILIB    = $(MPIDIR)/lib64
MPIBIN    = $(MPIDIR)/bin64
MPIARCH   = LINUX
MPI       = -L $(MPILIB) -D_MPI -D_MPI_NB -D_IMPI_
PARALLEL_SUFFIX +=-MPI-NB
endif
#######################################################
# LAM
#######################################################
ifeq (${MPIVEND},LAM)
MPIDIR    = /usr/local
MPILIB    = $(MPIDIR)/lib
MPIBIN    = $(MPIDIR)/bin
MPIARCH   = LINUX
MPI       = -L $(MPILIB) -D_MPI  -D_LAM_
PARALLEL_SUFFIX +=-MPI
endif
#######################################################
# OpenMPI
#######################################################
ifeq (${MPIVEND},OpenMPI)

ifeq ("${COMPILER}","Intel")
MPIDIR   = /share/mpi/icc/openmpi-1.6.3
endif

ifeq ("${COMPILER}","GNU")
#MPIDIR   = /share/mpi/gcc/openmpi-1.6.3
MPIDIR   = /usr/lib64/mpi/gcc/openmpi
endif

MPIARCH   = LINUX
#MPILIB32  = $(MPIDIR)/lib
MPILIB64  = $(MPIDIR)/lib
MPILIB    = $(MPILIB64)
MPIBIN    = $(MPIDIR)/bin
MPI       = $(MPIINC) -L $(MPILIB) -D_MPI  -D_OMPI_
PARALLEL_SUFFIX +=-OMPI
#  -NB -D_MPI_NB
endif

#######################################################
# I/O options for specific fs
#######################################################
# Memory Mapping restrictions
#######################################################
# MAP_SHARED restricted
#MMAP     += -D_NO_MMAP_SHARED_
# mmap restricted
#MMAP     += -D_NO_MMAP_
#######################################################

ifneq ("$(MMAP)$(MPI)$(OPENMP)$(CUDA)","")
PARALLEL=$(MMAP) $(MPI) $(OPENMP) $(CUDA)
endif

ifneq ("$(MPI)","")
PARALLEL += -D_PARALLEL_ONLY_
endif

ifneq ("$(CUDA)","")
PARALLEL += -D_PARALLEL_RECALC_Y_PLUS_
endif

LLIBS     = $(PARALLEL)



NUM_NODES=1